<Window x:Class="SmartNotes.StudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartNotes"
        mc:Ignorable="d"
        Title="StudyWindow" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#FDFDFD"
        >
    <Window.Resources>
        <!-- Simple styles for the card look -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" ShadowDepth="2" BlurRadius="10" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Progress -->
            <RowDefinition Height="*"/>
            <!-- Card Area -->
            <RowDefinition Height="Auto"/>
            <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- Progress Text -->
        <TextBlock x:Name="ProgressText" 
               Text="Card 1 of 10" 
               HorizontalAlignment="Center" 
               Foreground="#666" 
               FontSize="14" 
               Margin="0,0,0,10"/>

        <!-- The Flashcard Area (Click to Flip) -->
        <Button Grid.Row="1" Click="Card_Click" Background="Transparent" BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Style="{StaticResource CardBorderStyle}" Margin="10">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                                <TextBlock x:Name="CardContentText" 
                                       Text="Loading..." 
                                       TextWrapping="Wrap" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Foreground="#333"/>
                            </ScrollViewer>

                            <!-- Helper text at bottom of card -->
                            <TextBlock Text="(Click to flip)" 
                                   VerticalAlignment="Bottom" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#AAA" 
                                   FontSize="12" 
                                   Margin="0,0,0,10"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Navigation -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="CloseBtn" Content="End Session" Click="CloseBtn_Click" Width="100" Height="35" Margin="0,0,20,0" Background="#EEE" BorderThickness="0"/>
            <Button x:Name="NextBtn" Content="Next Card" Click="NextBtn_Click" Width="100" Height="35" Background="#444" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
