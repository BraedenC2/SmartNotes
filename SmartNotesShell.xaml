<Window x:Class="SmartNotes.SmartNotesShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartNotes"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">

    <Window.Resources>
        <!-- COLOR PALLET -->
        <SolidColorBrush x:Key="BgCream" Color="#F5F2E9"/>
        <SolidColorBrush x:Key="Ink" Color="#424242"/>
        <SolidColorBrush x:Key="InkSoft" Color="#6A6A6A"/>
        <SolidColorBrush x:Key="CardFill" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="CardStroke" Color="#19000000"/>
        <SolidColorBrush x:Key="FieldFill" Color="#0D000000"/>
        <SolidColorBrush x:Key="BtnNormal" Color="#424242"/>
        <SolidColorBrush x:Key="BtnHover" Color="#2F2F2F"/>

        <!-- PILL BUTTON PROPERTIES -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="{StaticResource CardFill}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                        CornerRadius="8"
                            Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="4,0,4,0"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="{StaticResource BtnNormal}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Study sets list template start -->
        <Style x:Key="StudySetsListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Template for the side menu cards sets -->
        <Style x:Key="StudySetItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Padding" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Root"
                        Background="Transparent"
                        CornerRadius="8"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                            <Grid Margin="10,6">
                                <TextBlock Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                   Foreground="{StaticResource Ink}"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="{StaticResource FieldFill}"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="{StaticResource CardFill}"/>
                                <Setter TargetName="Root"
                                Property="BorderBrush"
                                Value="{StaticResource BtnNormal}"/>
                                <Setter TargetName="Root"
                                Property="BorderThickness"
                                Value="1"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Small icon button for sandwich menu template -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#12000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card template for "currently studying" cards -->
        <DataTemplate x:Key="StudyCardTemplate">
            <Button Click="Card_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="220" Height="140"
                                Margin="10"
                                CornerRadius="12"
                                Background="{StaticResource CardFill}"
                                BorderBrush="{StaticResource CardStroke}"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.18"/>
                            </Border.Effect>
                            <StackPanel Margin="12">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="SemiBold"
                                           FontSize="15"
                                           Foreground="{StaticResource Ink}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Subtitle}"
                                           Margin="0,4,0,0"
                                           FontSize="12"
                                           Foreground="{StaticResource InkSoft}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Preview}"
                                           Margin="0,10,0,0"
                                           FontSize="12"
                                           Foreground="{StaticResource Ink}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>

        <!-- Icon Button Properties -->
        <Style x:Key="ActionIconButton" TargetType="Button">
            <Setter Property="Width" Value="77"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Background" Value="{StaticResource CardFill}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                        CornerRadius="10"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource BtnNormal}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Background for page -->
    <Grid Background="{StaticResource BgCream}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SideMenuColumn" Width="0"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDE MENU -->
        <Border Grid.Column="0"
                x:Name="SideMenuPanel"
                Background="#FFFDFBF5"
                BorderBrush="{StaticResource CardStroke}"
                BorderThickness="0,0,1,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Study Sets"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource Ink}"/>

                <ListBox x:Name="StudySetsListBox"
                         Grid.Row="2"
                         Margin="0,8,0,0" 
                         Style="{StaticResource StudySetsListBoxStyle}"
                         ItemContainerStyle="{StaticResource StudySetItemStyle}">
                    <ListBoxItem Content="Japanese - N5"/>
                    <ListBoxItem Content="Algorithms - Exam 1"/>
                    <ListBoxItem Content="Korean - Basics"/>
                </ListBox>


                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            Margin="0,4,0,0">
                    <Button Content="New Set"
                            Style="{StaticResource PillButton}"
                            HorizontalAlignment="Left"
                            Click="NewStudySetButton_Click"/>
                    <Button Content="Delete"
                            Style="{StaticResource PillButton}"
                            HorizontalAlignment="Right"
                            Click="DeleteStudySetButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR with sandwich + welcome -->
            <DockPanel Grid.Row="0" Margin="20,16,20,8">
                <Button x:Name="MenuToggleButton"
                        Style="{StaticResource IconButton}"
                        Click="MenuToggleButton_Click"
                        DockPanel.Dock="Left">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               FontSize="18"
                               Foreground="{StaticResource Ink}"
                               Text="&#xE700;"/>
                </Button>

                <!-- App title & user signed in info -->
                <StackPanel Orientation="Vertical"
                            Margin="12,0,0,0"
                            DockPanel.Dock="Left">
                    <TextBlock Text="SmartNotes"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource Ink}"/>
                    <TextBlock x:Name="WelcomeText"
                               Text="Welcome"
                               FontSize="13"
                               Foreground="{StaticResource InkSoft}"/>
                </StackPanel>
            </DockPanel>

            <!-- currently studying cards SAMPLE -->
            <Grid Grid.Row="1">
                <ItemsControl x:Name="ActiveCardsItemsControl"
                              ItemTemplate="{StaticResource StudyCardTemplate}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!-- ACTION BAR -->
            <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,20">

                <!-- NEW CARD BUTTON -->
                <Button Style="{StaticResource ActionIconButton}"
            Click="NewCardButton_Click"
            ToolTip="New Card">
                    <TextBlock Text="&#xE710;"/>
                </Button>

                <!-- IMAGE UPLOAD ICON -->
                <Button Style="{StaticResource ActionIconButton}"
            Click="UploadImageButton_Click"
            ToolTip="Upload Image (Create Notes)">
                    <TextBlock Text="&#xE114;"/>
                </Button>

                <!-- VIEW ALL CARDS ICON -->
                <Button Style="{StaticResource ActionIconButton}"
        Click="ViewAllCardsButton_Click"
        ToolTip="View All Cards">
                    <TextBlock Text="&#xE8A9;"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
