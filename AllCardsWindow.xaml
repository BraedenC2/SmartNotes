<Window x:Class="SmartNotes.AllCardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SmartNotes"
        Title="All Cards"
        Height="450"
        Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="All cards"
            FontSize="18"
            FontWeight="SemiBold"
            Margin="0,0,0,8" />

        <ListBox
            x:Name="CardsListBox"
            Grid.Row="1"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:LanguageFlashcard}">
                    <Border
                        Width="260"
                        Padding="8"
                        Margin="0,0,8,8"
                        Background="#11FFFFFF"
                        CornerRadius="6">
                        <Button
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Stretch"
                            Click="CardButton_Click">
                            <TextBlock
                                Text="{Binding FrontText}"
                                FontSize="16"
                                TextWrapping="Wrap" />
                        </Button>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
