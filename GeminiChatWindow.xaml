<Window x:Class="SmartNotes.GeminiChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartNotes"
        mc:Ignorable="d"
        Title="GeminiChatWindow" Height="450" Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Label -->
            <RowDefinition Height="Auto" />
            <!-- Input -->
            <RowDefinition Height="Auto" />
            <!-- Button -->
            <RowDefinition Height="*" />
            <!-- Output -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
        Grid.Row="0"
        Text="Create Spanish flashcard"
        FontSize="18"
        FontWeight="SemiBold"
        Margin="0,0,0,8" />

        <!-- Label -->
        <TextBlock
        Grid.Row="1"
        Text="English word:"
        Margin="0,0,0,4" />

        <!-- User input: single word -->
        <TextBox
        x:Name="UserInputTextBox"
        Grid.Row="2"
        TextWrapping="NoWrap"
        VerticalAlignment="Top"
        MinWidth="200" />

        <!-- Generate button -->
        <StackPanel
        Grid.Row="3"
        Orientation="Horizontal"
        HorizontalAlignment="Right"
        Margin="0,8,0,8">
            <Button
            x:Name="SendButton"
            Content="Generate card"
            Padding="12,6"
            Click="SendButton_Click" />
        </StackPanel>

        <!-- Card preview / status -->
        <TextBox
        x:Name="OutputTextBox"
        Grid.Row="4"
        IsReadOnly="True"
        AcceptsReturn="True"
        TextWrapping="Wrap"
        VerticalScrollBarVisibility="Auto"
        MinHeight="120" />
    </Grid>

</Window>
